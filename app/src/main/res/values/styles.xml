<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- window background - doesn't work now (probably due to support of old api)
        <item name="windowBackground">@color/primary_light</item>
        -->

        <!-- this is not ready yet, causes errors when button is clicked
        <item name="android:buttonStyle">@style/newsnap_button_style</item>
        -->

    </style>

    <style name="newsnap_button_style" parent="Base.TextAppearance.AppCompat.Button">

        <item name="android:background">@color/accent</item>

    </style>

    <!-- line divider -->
    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
